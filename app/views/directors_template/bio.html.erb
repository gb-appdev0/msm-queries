<h1>Director #<%= @dir.id %> details</h1>

<p><a href="/directors" class="btn tbn-block btn-outline-secondary">Go back</a> | <a href="/delete_director/<%= @dir.id %>" class="btn tbn-block btn-outline-secondary">Delete director</a></p>
<hr>
<dl>
  <dt>Name</dt>
  <dd><%= @dir.name %></dd>

  <dt>Dob</dt>
  <dd><%= @dir.dob %></dd>

  <dt>Bio</dt>
  <dd><%= @dir.bio %></dd>

  <dt>Image</dt>
  <dd><img src="<%= @dir.image %>" style="width:250px;"></dd>

  <dt>Created at</dt>
  <dd><%= time_ago_in_words(@dir.created_at) %> ago</dd>

  <dt>Updated at</dt>
  <dd><%= time_ago_in_words(@dir.updated_at) %> ago</dd>

</dl>

<hr>

<h1>Filmography</h1>

<table border="1">
  <tr>
    <td>ID</td>
    <td>Image</td>
    <td>Title</td>
    <td>Year</td>
    <td>Director</td>
    <td></td> 
  <tr>

  <% @movie_list.each do |ele| %>
    <tr>
      <td><%= ele.id %></td>
      <td><img src="<%= ele.image %>" style="width:250px"></td>
      <td><%= ele.title %></td>
      <td><%= ele.year %></td>
      <td><%= @dir.name %></td>
      <td><a href="/movies/<%= ele.id %>">Show details</a></td> 
    </tr>

  <% end %>
</table>