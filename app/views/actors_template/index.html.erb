<h1>List of Actors</h1>

<hr>

<table border="1">
  <tr>
    <td>ID</td>
    <td>Image</td>
    <td>Name</td>
    <td>Dob</td>
    <td></td>
  </tr>

  <% @list_of_actors.each do |an_actor| %>
    <tr>
      <td><%= an_actor.id %></td>
      <td><img src="<%= an_actor.image %>" style="width: 250px"></td>
      <td><%= an_actor.name %></td>
      <td><%= an_actor.dob %></td>
      <td><a href="/actors/<%= an_actor.id %>">Show details</a></td>
    </tr>

  <% end %>
</table>